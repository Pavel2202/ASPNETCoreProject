@model IndexDisplayViewModel

@{
    ViewData["Title"] = "Best Site for Athletes";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the best site for athletes</h1>
</div>

<h3 class="text-center">Check out our daily product and recipe</h3>
<div class="row">
    <div class="col-md-4 mr-5" style="width: 18rem;">
        <div class="card mb-3">
            <img class="card-img-top" src="@Model.Product.ImageUrl" alt="@Model.Product.Name">
            <div class="card-body">
                <h5 class="card-title">@Model.Product.Name</h5>
                <h6>Price: @Model.Product.Price</h6>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Product.Id" class="btn btn-primary">Read more</a>
                    <a asp-controller="Products" asp-action="AddToCart" asp-route-id="@Model.Product.Id" class="btn btn-primary">Add to Cart</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 ml-5" style="width: 18rem;">
        <div class="card mb-3">
            <img class="card-img-top" src="@Model.Recipe.ImageUrl" alt="@Model.Recipe.Title">
            <div class="card-body">
                <h5 class="card-title">@Model.Recipe.Title</h5>
                    <a asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Recipe.Id" class="btn btn-primary">Read more</a>
            </div>
        </div>
    </div>
</div>

<h3 class="text-center">Here are our best trainers</h3>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Trainers.Count(); i++)
        {
            var trainer = Model.Trainers[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" src="@trainer.ImageUrl" alt="@trainer.FullName">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Trainers" asp-action="Details" asp-route-id="@trainer.Id">@trainer.FullName</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>