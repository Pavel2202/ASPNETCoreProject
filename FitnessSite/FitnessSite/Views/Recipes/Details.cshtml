@model RecipeDetailsViewModel

@{
    ViewData["Title"] = @Model.Title;
}

<div class="row">
    <div class="col-md-6 offset-6">
        <h2>@Model.Title</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-2">
        <img class="card-img-top mb-3" src="@Model.ImageUrl" alt="@Model.Title">
    </div>
</div>

<div class="row">
    <div class="col-md-10 mb-3">
        @Model.Description
    </div>
</div>

<div class="row offset-9 mb-3">
    Added by: @Model.Creator
</div>