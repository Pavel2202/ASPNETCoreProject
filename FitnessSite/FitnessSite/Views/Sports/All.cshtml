@model IEnumerable<SportsViewModel>

@{
    ViewData["Title"] = "Sports";
}

<div class="row">
@foreach (var sport in Model)
{
    <div class="card w-25">
        <div class="card-body">
            <h5 class="card-title">@sport.Name</h5>
            <p class="card-text">Origin: @sport.Origin</p>
            <a asp-controller="Sports" asp-action="Details" asp-route-id="@sport.Id" class="btn btn-primary">Learn more</a>
        </div>
    </div>
}
</div>