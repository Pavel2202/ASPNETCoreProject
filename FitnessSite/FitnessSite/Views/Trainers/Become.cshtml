@model BecomeTrainerFormModel

@{
    ViewData["Title"] = "Become Trainer";
}

<h2 class="heading-margin text-center">Become Trainer</h2>

<form method="post">
  <div class="form-group">
    <label asp-for="FullName">Full Name</label>
    <input asp-for="FullName" class="form-control" placeholder="Your name here...">
    <span asp-validation-for="FullName" class="small text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" class="form-control" placeholder="Your email here...">
    <span asp-validation-for="Email" class="small text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="PhoneNumber">Phone Number</label>
    <input asp-for="PhoneNumber" class="form-control" placeholder="Your phone number here...">
    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="SportId"></label>
    <select asp-for="SportId" class="form-control">
      @foreach (var sport in Model.Sports)
            {
                <option value=@sport.Id>@sport.Name</option>
            }
        </select>
  </div>
  <div class="form-group">
    <label asp-for="Description">Description</label>
    <textarea asp-for="Description" class="form-control" rows="6" placeholder="Your description here..."></textarea>
    <span asp-validation-for="Description" class="small text-danger"></span>
  </div>

  <input class="btn btn-primary float-right" type="submit" value="Become"/>
</form>